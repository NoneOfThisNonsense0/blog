<article>

	<header>
		<h2><%= @post.title %></h2>
	</header>

	<p>
		Posted on:
		<%= @post.created_at %>
	</p>

	<p>
		<%= @post.content %>
	</p>

	<p>
		Category:
		<%= @post.category %>
	</p>

	<p>
		<%= link_to("Edit", edit_post_path) %>
	</p>

	<p>
		<%= link_to("All Posts", posts_path) %>
	</p>

</article>